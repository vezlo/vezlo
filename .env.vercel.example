# Vezlo Assistant Server - Vercel Environment Variables
# Copy these to your Vercel project settings: Project Settings > Environment Variables

# Required - Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Required - Database Configuration
SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_NAME=postgres
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-database-password

# Required - OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
AI_MODEL=gpt-4o
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Server Configuration (Optional - defaults provided)
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# CORS Configuration (Important for production)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting (Optional - defaults provided)
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Organization Settings (Optional)
ORGANIZATION_NAME=Vezlo
ASSISTANT_NAME=Vezlo Assistant

# Knowledge Base (Optional - defaults provided)
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Feature Flags (Optional)
ENABLE_CACHE=true
ENABLE_VOICE=true
ENABLE_GITHUB_SYNC=true
ENABLE_HUMAN_HANDOFF=true
ENABLE_FEEDBACK_DETECTION=true
